<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.PopupController">
    <children>
        <HBox alignment="CENTER">
            <children>
                <Label text="New Mail!">
                    <font>
                        <Font name="System Bold" size="21.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="3.0">
            <children>
                <Label text="You have">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="number" text="10">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label text="new mail(s)!">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="30.0" top="30.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="ok" mnemonicParsing="false" text="OK!" />
            </children>
            <padding>
                <Insets right="10.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
