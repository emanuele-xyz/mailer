<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MailboxController">
    <children>
      <HBox alignment="CENTER">
         <children>
                <Label fx:id="username" text="Username" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <Separator prefWidth="200.0" />
        <HBox alignment="CENTER" spacing="40.0">
            <children>
            <Button fx:id="deleteMail" mnemonicParsing="false" text="Delete" />
                <Button fx:id="newMail" mnemonicParsing="false" text="New" />
            </children>
            <VBox.margin>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </VBox.margin>
        </HBox>
        <ListView fx:id="mails" VBox.vgrow="ALWAYS" />
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="5.0" />
   </padding>
</VBox>
